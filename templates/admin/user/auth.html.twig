{% extends 'base.html.twig' %}

{% block title %}Авторизация{% endblock %}

{% block main %}
    <div style="width: 100%; height: 100%; justify-content: center; align-items: center; display: flex;">
        <div class="logging--wr">
            <div class="logging-logo">
                <div class="loading_logo_box"></div>
                <span class="loading_logo_text">Kraiber</span>
            </div>

            <form class="logging--form" action="{{ path('app_login') }}" method="post">
                <section>
                    <label for="username">Эл. почта</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required>
                </section>
                <section>
                    <label for="password">Пароль</label>
                    <input type="password" id="password" name="_password" required>
                </section>

                <div class="logging--error">
                    {% if error %}
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    {% endif %}
                </div>

                <div class="m-btn--wr">
                    <button type="submit">Войти</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
