{% extends 'base.html.twig' %}

{% block title %}Пользователи{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">

                {% if users is empty %}
                    Данных нет
                {% endif %}

                {% for user in users %}
                    <div class="wrapper--block wrapper--block--user">
                        {{ user.id }}
                        {{ user.email }}
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
