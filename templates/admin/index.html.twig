{% extends '@EasyAdmin/page/content.html.twig' %}


{% block content_title %}Dashboard{% endblock %}
{% block page_actions %}
    {% for command in commands %}
        <a class="btn btn-primary" href="/dev/project/{{ projectId }}/command/{{ command.commandCode }}/start/">
            {{ command.commandName }}
        </a>
    {% endfor %}
{% endblock %}

{% block main %}

    <div class="jj__main_wrapper jj__main_wrapper--line">

        {# -------------------------------------------------------------------------------------------------------- #}
        {# -------------------------------------------------Сессии------------------------------------------------- #}
        {# -------------------------------------------------------------------------------------------------------- #}
        <div class="jj__wrapper jj__wrapper-50 jj__wrapper-h-auto">
            <div class="jj__h">
                <h2>Сессии</h2>
            </div>

            <div class="jj__items">
                {% if sessions is empty %}
                    <div class="jj__items-without-data">
                        Данных нет
                    </div>
                {% endif %}

                {% for session in sessions %}
                    <div class="jj__item">
                        <a href="/admin/session/{{ session.id }}/" target="_blank">
                            <div class="jj__item_name">Название сессии: {{ session.sessionName }}</div>

                            <div class="jj__item_data">
                                <section>
                                    <span>Канал:</span> {{ session.sessionChannel }}
                                </section>
                                <section style="font-weight: bold; color: #ca0a9d;">
                                    <span>Контент:</span> {{ session.cache.content }}
                                </section>

                                {% if session.sessionVisitorEvent is defined %}
                                    <section>
                                        <span>Тип события:</span> {{ session.sessionVisitorEvent.type }}
                                    </section>
                                    <section>
                                        <span>Статус последнего события:</span> {{ session.sessionVisitorEvent.status }}
                                    </section>
                                {% endif %}
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>

        {# -------------------------------------------------------------------------------------------------------- #}
        {# --------------------------------------------------Боты-------------------------------------------------- #}
        {# -------------------------------------------------------------------------------------------------------- #}
        <div class="jj__wrapper jj__wrapper-50">
            <div class="jj__h">
                <h2>Боты</h2>
            </div>

            <div class="jj__items">
                {% if bots is empty %}
                    <div class="jj__items-without-data">
                        Данных нет
                    </div>
                {% endif %}

                {% for bot in bots %}
                    <div class="jj__item">
                        <div class="jj__item_name">Название бота: {{ bot.botName }}</div>

                        <div class="jj__item_data">
                            <section>
                                <span>Проект:</span> {{ bot.projectName }}
                            </section>
                            <section>
                                <span>Состояние:</span>
                                {% if bot.botActive is not empty %}
                                    <span class="jj__color-green">Активен</span>
                                {% else %}
                                    <span class="jj__color-red">Не активен</span>
                                {% endif %}
                            </section>
                            <section>
                                <span>Тип:</span> {{ bot.botType }}
                            </section>
                            <section>
                                <span>Токен:</span> {{ bot.botToken }}
                            </section>
                            <section>
                                <span>Вебхук:</span> {{ bot.webhookUri }}
                            </section>

                            <hr>

                            {% if bot.webhookInfo.pendingUpdateCount is not null %}
                                <section>
                                    <span>Количество обновлений, ожидающих доставки:</span> {{ bot.webhookInfo.pendingUpdateCount }}
                                </section>
                            {% endif %}

                            {% if bot.webhookInfo.lastErrorDate is not null %}
                                <section class="jj__color-red">
                                    <span>Дата ошибки:</span> {{ bot.webhookInfo.lastErrorDate }}
                                </section>
                            {% endif %}

                            {% if bot.webhookInfo.lastErrorMessage is not null %}
                                <section class="jj__color-red">
                                    <span>Сообщение об ошибки:</span> {{ bot.webhookInfo.lastErrorMessage }}
                                </section>
                            {% endif %}
                        </div>
                        <div class="jj__item_data jj__item_data--line">
                            <section>
                                <a href="/dev/project/{{ projectId }}/bot/{{ bot.botId }}/webhook/activate/">установить
                                    вебхук</a>
                            </section>

                            {% if bot.botActive is not empty %}
                                <section>
                                    <a href="/dev/project/{{ projectId }}/bot/{{ bot.botId }}/deactivate/">Отключить
                                        бота</a>
                                </section>
                            {% else %}
                                <section>
                                    <a href="/dev/project/{{ projectId }}/bot/{{ bot.botId }}/activate/">Включить
                                        бота</a>
                                </section>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="jj__main_wrapper jj__main_wrapper--line">

        {# -------------------------------------------------------------------------------------------------------- #}
        {# ------------------------------------------------Истории------------------------------------------------- #}
        {# -------------------------------------------------------------------------------------------------------- #}
        <div class="jj__wrapper jj__wrapper-50" id="history__wrapper">
            <div class="jj__h">
                <h2>Истории</h2>
            </div>

            <div class="jj__items">
                {% if histories is empty %}
                    <div class="jj__items-without-data">
                        Данных нет
                    </div>
                {% endif %}

                {% for historyItem in histories %}
                    <div class="jj__item
                        {% if historyItem.status == 'error' %}
                            jj__border-status--fail
                        {% elseif historyItem.status == 'success' %}
                            jj__border-status--success
                        {% endif %}
                        ">
                        <div class="jj__item_name">{{ historyItem.createdAt|date('Y-m-d h:i:s') }}</div>

                        <div class="jj__item_data jj__item_data--line">
                            <section class="jj__item_field--history-status">
                                <span>Статус:</span>
                                {% if historyItem.status == 'error' %}
                                    <span class="jj__color-red"> Провалено </span>
                                {% elseif historyItem.status == 'success' %}
                                    <span class="jj__color-green"> Успешно </span>
                                {% endif %}
                            </section>
                            <section class="jj__item_field--history-type">
                                <span>Тип:</span> {{ historyItem.type }}
                            </section>
                            {% if historyItem.sender is defined %}
                                {% if historyItem.sender.name is not null %}
                                    <section class="jj__icon-soc--wrapper jj__item_field--history-sender">
                                        <span>Откуда:</span> {{ historyItem.sender.name }}
                                        <img class="jj__icon-soc"
                                             src="{{ historyItem.sender.icon }}"
                                             alt="{{ historyItem.sender.name }}">
                                    </section>
                                {% endif %}
                            {% endif %}

                            {% if historyItem.recipient is defined %}
                                {% if historyItem.recipient.name is not null %}
                                    <section class="jj__icon-soc--wrapper jj__item_field--history-recipient">
                                        <span>Куда:</span> {{ historyItem.recipient.name }}
                                        <img class="jj__icon-soc"
                                             src="{{ historyItem.recipient.icon }}"
                                             alt="{{ historyItem.recipient.name }}">
                                    </section>
                                {% endif %}
                            {% endif %}

                            {% if historyItem.errorMessage is defined %}
                                <section class="jj__item_field--history-error">
                                    <span>Контекст ошибки:</span> {{ historyItem.errorMessage }}
                                </section>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        {# -------------------------------------------------------------------------------------------------------- #}
        {# -------------------------------------------------нарии-------------------------------------------------- #}
        {# -------------------------------------------------------------------------------------------------------- #}
        <div class="jj__wrapper jj__wrapper-50">
            <div class="jj__h">
                <h2>Сценарии</h2>
            </div>

            <div class="jj__items">
                {% if scenario is empty %}
                    <div class="jj__items-without-data">
                        Данных нет
                    </div>
                {% endif %}

                {% for scenarioItem in scenario %}
                    <div class="jj__item">
                        <div class="jj__item_name">Сценарий #{{ scenarioItem.id }}</div>

                        <div class="jj__item_data jj__item_data--line">
                            <section>
                                <span>Название:</span> {{ scenarioItem.name }}
                            </section>
                        </div>

                        <div class="jj__item_data jj__item_data--line">
                            <section>
                                <form action="/dev/project/{{ projectId }}/scenario/{{ scenarioItem.id }}/apply/"
                                      method="GET">
                                    <label>
                                        Подключить бот:
                                        <select name="botId">
                                            {% for bot in bots %}
                                                <option value="{{ bot.botId }}">{{ bot.botName }}</option>
                                            {% endfor %}
                                        </select>
                                        к сценарию
                                    </label>

                                    <button>
                                        Подключить
                                    </button>
                                </form>
                            </section>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
